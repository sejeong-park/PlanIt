<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.trip.planit.user.model.mapper.AuthMapper">

    <select id="selectByUser" resultType = "auth">
        SELECT * FROM `refresh-token` WHERE user_id=#{user_id}
    </select>

    <insert id="insertByAuth" parameterType="auth">
        INSERT INTO `refresh-token` (user_id, token) VALUES (#{userId}, #{refreshToken})
    </insert>

    <update id="updateByAuth" parameterType="auth">
        UPDATE `refresh-token` SET token=#{refreshToken} WHERE user_id = #{userId}
    </update>

</mapper>
